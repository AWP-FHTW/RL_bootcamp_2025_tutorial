{
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "hostRequirements": {
    "cpus": 16
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install --upgrade pip && pip install -r requirements.txt",
  "postCreateCommand": "",
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "extensions": [
        "ms-toolsai.jupyter",
        "ms-python.python",
        "ms-python.pylint",
        "GitHub.copilot",
        "GitHub.copilot-chat"
      ]
    }
  }
}
